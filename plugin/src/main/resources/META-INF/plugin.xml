<idea-plugin>
    <id>com.github.tarcv.surveyoridea</id>
    <name>UI Surveyor</name>
    <vendor>TarCV</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <!-- Modules present in all IDEs: -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.xml</depends>
    <!-- Modules/plugins that are optional or not present in all IDE: -->
    <!-- (This list should match platformPlugins in gradle.properties) -->
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Locate Element" anchor="bottom" secondary="false"
                    factoryClass="com.github.tarcv.surveyoridea.gui.LocateToolWindowFactory" />
        <fileType name="XML" extensions="uix" />
        <dom.fileMetaData implementation="com.github.tarcv.surveyoridea.filetypes.uix.UixDomDecription"
                          rootTagName="hierarchy" stubVersion="1" />
        <notificationGroup displayType="TOOL_WINDOW" id="com.github.tarcv.surveyoridea.gui.NotificationGroup" toolWindowId="Locate Element" />

        <navbar implementation="com.github.tarcv.surveyoridea.gui.UiAwareNavigationBar" />
    </extensions>

    <applicationListeners>
    </applicationListeners>
    <actions>
        <group id="com.github.tarcv.surveyoridea.gui.LocateToolWindow.toolbar"/>

        <action id="com.github.tarcv.surveyoridea.gui.LocateAction"
                class="com.github.tarcv.surveyoridea.gui.LocateAction" text="UI Surveyor: Locate Element"
                description="Locate element in the currently active editor using a locator in the tool window"
                icon="AllIcons.Actions.Find">
            <override-text place="MainMenu" text="Locate _Element" />
            <synonym text="Find Element" />

            <add-to-group group-id="FindMenuGroup" anchor="last"/>
            <add-to-group group-id="com.github.tarcv.surveyoridea.gui.LocateToolWindow.toolbar" />
        </action>

    </actions>
</idea-plugin>
